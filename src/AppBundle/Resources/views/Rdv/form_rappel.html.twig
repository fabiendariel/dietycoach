<link rel="stylesheet" href="{{ asset('bundles/plugins/iCheck/all.css') }}" />
{{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
          <div class="row">
            <div class="col-md-12">
                <table class="table table-striped table-condensed">
                    <tbody>
                    <tr>
                        <td align="right" class="col-lg-4" style="padding:15px 0 10px;">
                            Origine :
                        </td>
                        <td align="center" class="col-lg-8" style="padding:15px 0 10px;">
                            {{ rappel.origineRappel.label | raw}}
                        </td>
                    </tr>
                    <tr>
                        <td align="right" class="col-lg-4" style="padding:15px 0 10px;">
                            Date de création :
                        </td>
                        <td align="center" class="col-lg-8" style="padding:15px 0 10px;">
                            {{ rappel.dateCreation | date('d/m/Y H:i:s')}}
                        </td>
                    </tr>
                    <tr>
                        <td align="right" class="col-lg-4" style="padding:15px 0 10px;">
                            Téléphone :
                        </td>
                        <td align="center" class="col-lg-8" style="padding:15px 0 10px;">
                            {{ rappel.telephone | raw}}
                        </td>
                    </tr>
                    <tr>
                        <td align="right" class="col-lg-4" style="padding:15px 0 10px;">
                            Date de rappel :
                        </td>
                        <td align="center" class="col-lg-8" style="padding:15px 0 10px;">
                            {{ rappel.dateRappel | date('d/m/Y')}}
                        </td>
                    </tr>
                    <tr>
                        <td align="right" class="col-lg-4" style="padding:15px 0 10px;">
                            Heure du rappel :
                        </td>
                        <td align="center" class="col-lg-8" style="padding:15px 0 10px;">
                            {{ rappel.heureRappel | date('H:i')}}
                        </td>
                    </tr>

                    </tbody>
                </table>
            </div>

          </div>
          <div class="box-footer" style="text-align: center">
              <a href="{{ path('app_rappel_list') }}"><button type="button" class="btn btn-danger">Annuler</button></a>

              {{ form_widget(form.save, {'attr': {'class': 'btn btn-primary'},  'label': 'Traité'}) }}
              <div style="display:none;">{{ form_rest(form) }}</div>
          </div>
          <!-- /.row -->
 {{ form_end(form) }}

